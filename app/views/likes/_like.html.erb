<% unless tweetpost.like_user(current_user.id).blank? %>
  <%= link_to tweetpost_like_path(tweetpost_id: tweetpost.id ,id: tweetpost.likes[0].id), class:"link-clear", method: :delete, remote: true do %>
    <i class="fas fa-heartbeat"></i>
  <% end %>
<% else %>
  <%= link_to tweetpost_likes_path(tweetpost.id), class:"link-clear", method: :post, remote: true do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>

