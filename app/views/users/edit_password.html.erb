<%= form_for(@user) do |f| %>

  <%= f.label :新しいパスワード%>
  <%= f.password_field :password, class:"form-control" %>
  <%= render "shared/password_error_messages" %>

  <%= f.label :password_confirmation_change %>
  <%= f.password_field :password_confirmation, class:"form-control" %>
  <%= render "shared/password_confirmation_error_messages" %>

  <%= f.submit "変更する", class:"btn btn-primary" %>
<% end %>