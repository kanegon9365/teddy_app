<%= form_for(@tweetposts) do |f| %>
    <%= f.text_area :content, placeholder: "", class:"tweet-area"%>
    <label for="file_photo">
     <i class="fas fa-camera-retro"></i>
      <%= f.file_field :picture, id:"file_photo", style:"display: none", accept: "image/jpeg,image/gif,image/png"%>
    </label>
    <%= f.submit "投稿", class: "btn post-btn" %>
  <% end %>

  <script type="text/javascript">
  $('#tweetpost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('５MB以下のファイルを選択してください');
    }
  });

  
</script>